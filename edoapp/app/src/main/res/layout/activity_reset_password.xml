<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6E1C2"
    tools:context=".AuthPages.ResetPasswordActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/send_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="#5C4227"
            android:hint="Email" />


        <Button
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="20dp"
            android:background="#EB8B4E"
            android:text="MAİL GÖNDER"
            android:textColor="#5C4227"
            app:backgroundTint="#EB8B4E" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5C4227"
            android:layout_gravity="center"
            android:text="Butona tıkladığınızda şifre sıfırlamak için bir email alacaksınız"></TextView>


    </LinearLayout>

</RelativeLayout>
